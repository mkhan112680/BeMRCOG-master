@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="p-4 mt-5 animated fadeInUp bg-primary landScape-scroll ">
    <div class="d-block mx-auto " id="div-login-responsive">
        <a href="javascript:void(0)">
            <img src="../assets/images/logo_white.png" class="block margin-auto w-50 mb-3" alt="Company Logo">
        </a>
        <div class="card p-4 mb-3 ">
            <div class="row m-0">
                <div class="col-sm-12 border-right">
                    <h3 class="text-primary font-weight-normal mb-3">
                        @Resources.Login.ResetPasswordStr
                    </h3>
                    <div class="border rounded-top rounded-bottom">
                        <div class="row m-0 ">
                            <label for="txt-email"><span class="sr-only">WCAG</span></label>
                            <div class="col p-1 border-bottom">
                                <input id="txt-email" placeholder="@Resources.Login.EnterEmailStr" class="form-control form-control-lg border-0" />
                            </div>
                        </div>
                    </div>
                    <div>
                        <span id="reset-message" style="color:red" class="small"></span>
                    </div>
                    <div>
                        <span class="form-check-label mt-3 mb-3 text-color">
                        </span>
                    </div>
                    <div class="text-danger" id="div-error"></div>
                    <div class="text-right">
                        <a class="btn btn-lg btn-primary" id="btn-reset" data-url="@Url.Action("ResetPasswordUser","Account")">@Resources.Login.ResetStr</a>
                        <a class="btn btn-lg btn-primary" href='@Url.Action("Login","Account")'>@Resources.Login.Cancel</a>
                    </div>
                    <div class="mt-3 small mb-2 text-muted">@Html.Raw(@Resources.Login.License)</div>
                </div>
            </div>
        </div>
        <div class="row small text-sm-left text-center">
            <div class="col-sm-8 mb-2">
                @Resources.Login.CopyRight
            </div>
            <div class="col-sm-4 text-sm-right">
                <a href="javascript:void(0)" class="mr-1">@Resources.Login.Privacy</a> | <a href="javascript:void(1)" class="ml-1">@Resources.Login.Support</a>
            </div>
        </div>
    </div>
</section>
<script>
    $(document).ready(function () {

        $('#dd-profile').on('click', function (e) {
            e.stopPropagation();
        });

        $('#txt-email:input').keyup(function (e) {
            if (e.keyCode == 13) {
                 $("#btn-reset").click();
            }
        });
    });
</script>